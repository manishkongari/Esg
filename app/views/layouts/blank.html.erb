<!DOCTYPE html>
<html>
<head>
  <title>Esg</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<center>
  <% if notice.present? %>
      <div class="alert alert-success"><%= notice %><a class="close" data-dismiss="alert">x</a></div>
  <% elsif alert.present?%>
      <div class="alert text-danger"><%= alert %></div>
  <%end %>
</center>

<div class="container-fluid">
  <%= yield %>
</div>
</body>
</html>
