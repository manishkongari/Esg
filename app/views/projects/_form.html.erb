    <%= select_tag "component_type[name]", "", class: "form-control"%> <%= button_tag "Add Component" %>
  </div>
  <div class="clearfix"></div>
</div>


<script>
    $("#component_type_name").select2({
        ajax: {
            url: "/component_type_list",
            dataType: 'json',
            type: "GET",
            quietMillis: 50,
            data: function (params) {
                return {
                    q: params.term, // search term
                    page: params.page
                };
            },
            processResults: function (data, page) {

                  return {
                    results: data
                };
            },
            cache: true
        },
        minimumInputLength: 2
    });
</script>

