
<div class="form-group">
  <label class="col-sm-4" for="component_ctype">Component Type:</label>
  <div class="col-sm-8">
    <%= component.name %>
    <%= hidden_field_tag "component[component_type_id][]", component.id, class: "form-control"%>
  </div>
  <div class="clearfix"></div>
</div>

<div class="form-group">
  <label class="col-sm-4" for="component_partno">Part Number:</label>
  <div class="col-sm-8">
    <%= text_field_tag "component[partno][]", "", class: "form-control"%>
  </div>
  <div class="clearfix"></div>
</div>

<div class="form-group">
  <label class="col-sm-4" for="component_desc">Item Description:</label>
  <div class="col-sm-8">
    <%= text_area_tag "component[desc][]","", class: "form-control"%>
  </div>
  <div class="clearfix"></div>
</div>

<div class="form-group">
  <label class="col-sm-4" for="component_ctype">Manufacturer:</label>
  <div class="col-sm-8">
    <%= text_field_tag "component[manuf][]", "", class: "form-control"%>
  </div>
  <div class="clearfix"></div>
</div>

<div class="form-group">
  <label class="col-sm-4" for="component_partno">Quantity:</label>
  <div class="col-sm-8">
    <%= text_field_tag "component[qty][]", "", class: "form-control"%>
  </div>
  <div class="clearfix"></div>
</div>
