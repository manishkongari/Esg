<div class="clearfix"></div>
<ol class="breadcrumb margin-left-14px">
  <li ><%= link_to "Home", root_path %></li>
  <li ><%= link_to "ESG Whiteboard ", projects_path %></li>
  <li class="active ">Project Details</li>
</ol>




<div class="col-sm-7 col-sm-offset-2">
  <h4 >Project Details</h4>
  <div class="clearfix"> </br> </div>
  <div class="form-group">
    <label class="col-sm-3">Project Name:</label>
    <div class="col-sm-9">
      <%= @project.projectname %>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="form-group">
    <label class="col-sm-3">Priority Number:</label>
    <div class="col-sm-9">
      <%= @project.priority %>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="form-group">
    <label class="col-sm-3">Contract Number:</label>
    <div class="col-sm-9">
      <%= @project.contract %>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="form-group">
    <label class="col-sm-3">Sales Person:</label>
    <div class="col-sm-9">
      <%= @project.salescontact %>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="form-group">
    <label class="col-sm-3">Engineer:</label>
    <div class="col-sm-9">
      <%= @project.engineer %>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="form-group">
    <label class="col-sm-3">PO Received:</label>
    <div class="col-sm-9">
      <%= @project.podate.try(:strftime,("%d/%m/%Y")) %>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="form-group">
    <label class="col-sm-3">Panel Parts Arrived:</label>
    <div class="col-sm-9">
      <%= @project.buildready %>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="form-group">
    <label class="col-sm-3">Date QC Tested:</label>
    <div class="col-sm-9">
      <%= @project.qcdate.try(:strftime,("%d/%m/%Y")) %>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="form-group">
    <label class="col-sm-3">Shipped Date:</label>
    <div class="col-sm-9">
      <%= @project.shipdate.try(:strftime,("%d/%m/%Y")) %>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="form-group">
    <label class="col-sm-3">MTDR:</label>
    <div class="col-sm-9">
      <%= @project.mtdr %>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="form-group">
    <label class="col-sm-3">Note:</label>
    <div class="col-sm-9">
      <%= @project.quicknote %>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="clearfix"></div>
  <%if @project.components.present? %>  <h4 >Component Details</h4><div class="clearfix"></br></div> <% end %>
  <%@project.components.to_a.each do |component| %>

      <div class="form-group">
        <label class="col-sm-3">Component Type:</label>
        <div class="col-sm-9">
          <%= component.try(:component_type).try(:name).present? ? component.try(:component_type).try(:name) : "-" %>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="form-group">
        <label class="col-sm-3">Part Number:</label>
        <div class="col-sm-9">
          <%= component.try(:partno).present? ? component.try(:partno) : "-" %>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="form-group">
        <label class="col-sm-3">Item Description:</label>
        <div class="col-sm-9">
          <%= component.try(:desc).present? ? component.try(:desc) : "-"%>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="form-group">
        <label class="col-sm-3">Manufacturer:</label>
        <div class="col-sm-9">
          <%= component.try(:manuf).present? ? component.try(:manuf) : "-" %>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="form-group">
        <label class="col-sm-3">Quantity:</label>
        <div class="col-sm-9">
          <%= component.try(:qty).present? ? component.try(:qty) : "-" %>
        </div>
        <div class="clearfix"></div>
      </div>

  <%end %>
</div>


<div class="clearfix"></div>

